<h1>Listing contests</h1>

<%= link_to 'Create New Contest', new_contest_path, class: "btn btn-success" %>

<br><br>


<!-- begin current contest table -->
<table class="table table-hover table-condensed table-bordered">
  <thead >
    <tr  class="success">
      <th colspan="6">Current contests</th>
    </tr>
    <tr>
      <th>Title</th>
      <th>Candidates</th>
      <th>Start</th>
      <th colspan="3"></th>
    </tr>

   <tbody background-color='white'>
   <% @contests.current.each do |contest| %>
    <%= render partial: "contestlist", locals: { contest: contest} %>
   <% end %>
  </tbody>
</table>
<!-- end current contest table -->


<!-- begin Future contest table -->
<table class="table table-hover table-condensed">
  <thead >
    <tr  class="info">
      <th colspan="6">Future contests</th>
    </tr>
    <tr>
      <th>Title</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="2"></th>
    </tr>

   <tbody>
   <% @contests.future.each do |contest| %>
    <%= render partial: "contestlist", locals: { contest: contest} %>
   <% end %>
  </tbody>
</table>
<!-- end Future contest table -->


<br><br>
<!-- begin past contest table -->
<table class="table table-hover table-condensed">
  <thead>
    <tr class="danger">
      <th colspan="6">Past contests</th>
    </tr>
    <tr>
      <th>Title</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="2"></th>
    </tr>

   <tbody>
   <% @contests.where("end_date < ?", DateTime.now).each do |contest| %>
    <%= render partial: "contestlist", locals: { contest: contest} %>
   <% end %>
  </tbody>
</table>
<!-- end past contest table -->

