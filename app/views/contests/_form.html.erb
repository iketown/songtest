<div class='panel panel-default'>
  <div class='panel-heading'><h3 class="panel-title">Contest #<%= @contest.id %>  -  <%= @contest.title %></h3> </div>
<div class="panel-body">
<!-- <div class="col-sm-6"> -->


<%= simple_nested_form_for @contest do |f| %>
<%#= simple_nested_form_for(@contest, :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>
  <div class="form-inputs">
    <%= f.input :start_date %>
  </div>
  <div class="form-inputs">
    <%= f.input :end_date %>
  </div>
<br><br>
<!-- </div> -->
<!-- <div class='col-sm-6'> -->

<%= f.fields_for :candidates  do |cand_form| %>

<div class="form-inputs spaceme">
    <%= cand_form.select :song_id, @songs.map{|s| ["#{s.artist} - #{s.title}", s.id]}, class: 'form-control'  %>
    <span class="glyphicon glyphicon-arrow-right"></span>
    <%= cand_form.link_to_remove "remove", class: 'btn btn-xs btn-danger' %><br>
</div>
<% end %>


<div class="form-inputs spaceme">
  <%= f.link_to_add "add a candidate", :candidates, class: 'btn btn-sm btn-success' %>
  </div>

<!-- </div> -->
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


</div>
</div>